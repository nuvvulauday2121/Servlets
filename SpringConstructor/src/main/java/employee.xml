<?xml version="1.0" encoding="UTF-8"?>


  
<beans  
    xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:p="http://www.springframework.org/schema/p"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans  
                http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">  
              
                
       <bean id ="adress" class ="com.uday.SpringConstructor.Adress">
       
       <constructor-arg value="Khammam"></constructor-arg>
       <constructor-arg value="Telangana"></constructor-arg>
       <constructor-arg value="India"></constructor-arg>
       
       
       
       </bean>    
            
                
                
                
       <bean id ="employee" class = "com.uday.SpringConstructor.Employee">
 
        <constructor-arg value ="10" type="int"></constructor-arg> 
       <constructor-arg value ="uday"></constructor-arg>
       <constructor-arg> <ref bean ="adress"/> </constructor-arg>
       
       
       
       </bean>         
                
    
    
    
    </beans>            